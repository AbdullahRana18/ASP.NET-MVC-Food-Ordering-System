@model IEnumerable<foodPandaDBMS.Models.tblUser>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">User List</h2>

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg">
        <div class="card-header text-white" style="background-color: #e74c3c;">
            <h3 class="mb-0">User Information</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserPassword)</td>
                            <td>
                                @Html.ActionLink("View", "Details", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="@Url.Action("Dashboard", "tblUsers")"
           class="btn red-button btn-sm font-weight-bold mx-1">
            <i class="fas fa-arrow-left me-2"></i> Back
        </a>
    </div>
</div>

<style>
    .btn-danger {
        background-color: #e74c3c;
        color: white;
        min-width: 75px;
        text-align: center;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .red-button {
        background-color: #e74c3c;
        color: white;
        border: none;
    }

        .red-button:hover {
            background-color: #c0392b !important;
            color: white !important;
        }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #e74c3c;
    }

    .card-body {
        background-color: #f9f9f9;
        border-radius: 10px;
    }

    table th, table td {
        text-align: center;
        padding: 1rem 0.5rem;
        vertical-align: middle;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #2c3e50;
    }
</style>
