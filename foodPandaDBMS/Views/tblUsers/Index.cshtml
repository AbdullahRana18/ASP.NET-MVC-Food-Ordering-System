@model IEnumerable<foodPandaDBMS.Models.tblUser>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">User List</h2>

<p class="text-center">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success px-4" })
</p>

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg">
        <div class="card-header text-white" style="background-color: #e74c3c;">
            <h3 class="mb-0">User Information</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.UserEmail)</th>
                        <th>@Html.DisplayNameFor(model => model.UserNIC)</th>
                        <th>@Html.DisplayNameFor(model => model.UserPassword)</th>
                        <th>@Html.DisplayNameFor(model => model.Address_HouseNo)</th>
                        <th>@Html.DisplayNameFor(model => model.Address_City)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td style="width: 200px;">@Html.DisplayFor(modelItem => item.UserEmail)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserNIC)</td>
                            <td style="width: 120px;">@Html.DisplayFor(modelItem => item.UserPassword)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address_HouseNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address_City)</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

