@model foodPandaDBMS.Models.tblUser

@{
    ViewBag.Title = "Details";
}

<!-- Bootstrap Icons CSS (make sure this is in your layout file's <head> section too) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2 class="text-center my-4">User Details</h2>

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg">
        <div class="card-header text-white" style="background-color: #e74c3c;">
            <h3 class="mb-0">tblUser Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.UserName) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.UserName) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.UserEmail) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.UserEmail) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.UserNIC) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.UserNIC) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.UserPassword) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.UserPassword) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.Address_HouseNo) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.Address_HouseNo) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.Address_City) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.Address_City) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.Address_Status) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.Address_Status) </dd>

                <dt class="col-sm-4 font-weight-bold"> @Html.DisplayNameFor(model => model.Address_PostalCode) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.Address_PostalCode) </dd>
            </dl>

            <div class="form-group text-center mt-4">
                @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary px-4 hover-button" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary px-4 ml-2 hover-button" })
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Styling -->
<style>
    .card-header {
        background-color: #e74c3c;
    }

    .card-body {
        background-color: #f9f9f9;
        border-radius: 10px;
    }

    .text-danger {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .form-group input[type="submit"],
    .form-group a {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .hover-button:hover {
        background-color: #e74c3c;
        color: white;
    }

    .card-title {
        color: #2c3e50;
    }

    dl dt {
        font-weight: bold;
        color: #2c3e50;
    }

    dl dd {
        color: #666;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #2c3e50;
    }
</style>
