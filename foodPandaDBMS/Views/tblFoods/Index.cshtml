@model IEnumerable<foodPandaDBMS.Models.tblFood>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg" style="background-color: #f9f9f9;">
        <div class="card-header text-white text-center" style="background-color: #e74c3c;">
            <h2 class="mb-0">Food List</h2>
        </div>
        <div class="card-body">

            <div class="text-right mb-3">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success font-weight-bold" })
            </div>

            <table class="table table-bordered table-striped">
                <thead style="background-color: #c0392b; color: white;">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FoodName)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>Image</th>
                        <th>@Html.DisplayNameFor(model => model.tblRestaurant.RestaurantName)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FoodName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Category)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price) Rs</td>
                            <td>
                                <img src="@Url.Content(item.ImagePath)" alt="Food Image"
                                     style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.tblRestaurant.RestaurantName)</td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.FoodID },
                                    new { @class = "btn red-button btn-sm font-weight-bold mr-1" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.FoodID },
                                    new { @class = "btn red-button btn-sm font-weight-bold mx-1" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.FoodID },
                                    new { @class = "btn red-button btn-sm font-weight-bold ml-1" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom Red Button Styling -->
<style>
    .red-button {
        background-color: #e74c3c;
        color: white;
        border: none;
    }

        .red-button:hover {
            background-color: #c0392b !important;
            color: white !important;
        }
</style>
