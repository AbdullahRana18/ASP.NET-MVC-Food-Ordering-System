@model foodPandaDBMS.Models.tblFood

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg" style="background-color: #f9f9f9;">
        <div class="card-header text-white text-center" style="background-color: #e74c3c;">
            <h2 class="mb-0">Delete Confirmation</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4 text-center">Are you sure you want to delete this?</h4>

            <dl class="row">
                <dt class="col-sm-4 font-weight-bold" style="color: #2c3e50;">
                    @Html.DisplayNameFor(model => model.FoodName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FoodName)
                </dd>

                <dt class="col-sm-4 font-weight-bold" style="color: #2c3e50;">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Category)
                </dd>

                <dt class="col-sm-4 font-weight-bold" style="color: #2c3e50;">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-4 font-weight-bold" style="color: #2c3e50;">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ImagePath)
                    <br />
                    <img src="@Url.Content(Model.ImagePath)" alt="Food Image" class="img-thumbnail mt-2" style="max-height:200px;" />
                </dd>

                <dt class="col-sm-4 font-weight-bold" style="color: #2c3e50;">
                    @Html.DisplayNameFor(model => model.tblRestaurant.RestaurantName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.tblRestaurant.RestaurantName)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Delete" class="btn hover-button text-white px-4" style="background-color: #e74c3c;" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>

<!-- Hover button style -->
<style>
    .hover-button:hover {
        background-color: #c0392b !important;
        color: white !important;
    }
</style>
